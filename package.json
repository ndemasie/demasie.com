{
  "name": "@ndemasie/mono",
  "version": "0.3.0",
  "author": {
    "name": "Nathan DeMasie"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm run docker:dev & npm run watch:webcontainer",
    "docker:clean": "bash ./scripts/docker_functions.sh stop && bash ./scripts/docker_functions.sh clean",
    "docker:dev": "docker-compose -f ./docker-compose.dev.yaml up --build --abort-on-container-exit",
    "lint:check": "npx eslint src",
    "lint:fix": "npx eslint src --fix",
    "run:ts-script": "npx ts-node --transpile-only --project ./scripts/tsconfig.json",
    "script:buildWebContainerFileSystemTree": "npm run run:ts-script -- ./scripts/buildWebContainerFileSystemTree.ts",
    "update": "npx npm-check --update",
    "terraform": "terraform -chdir='./terraform'",
    "watch:site:public": "echo \"Deprecated: $ npx nodemon --ext 'tsx' --watch './site/src/**/public/**/*.tsx' --exec 'bash ./scripts/copy_public_dirs.sh'\"",
    "watch:webcontainer": "npx nodemon --watch './apps/webcontainer-*/**/*.*' --exec 'npm run script:buildWebContainerFileSystemTree'"
  },
  "devDependencies": {
    "@styled/typescript-styled-plugin": "^0.20.0",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^2.0.22",
    "npm-check": "^6.0.1",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^15.3.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}