{
  "name": "@ndemasie/site",
  "version": "0.3.0",
  "author": {
    "name": "Nathan DeMasie"
  },
  "license": "MIT",
  "bugs": "https://github.com/ndemasie/ndemasie.github.io/issues",
  "homepage": "https://ndemasie.github.io",
  "scripts": {
    "astro:build": "npx astro build",
    "astro:dev": "npx astro dev",
    "build": "bash ./scripts/build.sh",
    "dev": "npm run docker:dev & npm run watch:public",
    "docker:clean": "bash ./scripts/docker_functions.sh stop && bash ./scripts/docker_functions.sh clean",
    "docker:dev": "docker-compose -f ./docker/dev/docker-compose.yaml up --build --abort-on-container-exit",
    "format:check": "npx prettier --check \"src/**/*.{astro,js,jsx,ts,tsx,css,scss,sass,md}\"",
    "format:write": "npx prettier --write \"src/**/*.{astro,js,jsx,ts,tsx,css,scss,sass,md}\"",
    "lint:check": "npx eslint src",
    "lint:fix": "npx eslint src --fix",
    "update": "npx npm-check --update",
    "watch:public": "npx nodemon --ext 'tsx' --watch './src/**/public/**/*.tsx' --exec 'bash ./scripts/copy_public_dirs.sh'"
  },
  "devDependencies": {
    "@astrojs/react": "^2.1.0",
    "@astrojs/sitemap": "^1.2.1",
    "@astrojs/ts-plugin": "^0.4.4",
    "@styled/typescript-styled-plugin": "^0.20.0",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/lodash": "^4.14.192",
    "@types/lunr": "^2.3.4",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "astro": "^2.1.8",
    "autoprefixer": "^10.4.14",
    "cssnano": "^5.1.15",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "node-html-parser": "^6.1.5",
    "nodemon": "^2.0.22",
    "npm-check": "^6.0.1",
    "postcss-logical": "^6.1.0",
    "postcss-preset-env": "^8.2.0",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.60.0",
    "stylelint": "^15.3.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^10.1.0",
    "@emotion/css": "^11.10.6",
    "@emotion/react": "^11.10.6",
    "animate.css": "^4.1.1",
    "highlight.js": "^11.7.0",
    "i18next": "^22.4.13",
    "lodash": "^4.17.21",
    "lunr": "^2.3.9",
    "lunr-languages": "^1.10.0",
    "modern-normalize": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.2.0",
    "react-use": "^17.4.0",
    "reading-time": "^1.5.0"
  }
}