{
  "name": "@ndemasie/mono",
  "version": "0.3.0",
  "author": {
    "name": "Nathan DeMasie"
  },
  "license": "MIT",
  "scripts": {
    "app": "bash -c 'npm --prefix ./apps/$0 run start'",
    "start": "npm run docker:dev & npm run watch:webcontainer",
    "docker:clean": "bash ./scripts/docker_functions.sh stop && bash ./scripts/docker_functions.sh clean",
    "docker:dev": "docker compose --file ./docker-compose.dev.yaml up --build --abort-on-container-exit",
    "docker:deploy": "docker compose --file ./docker-compose.prod.yaml up --build --abort-on-container-exit",
    "lint:check": "npx eslint src",
    "lint:fix": "npx eslint src --fix",
    "run:ts-script": "npx ts-node --transpile-only --project ./scripts/tsconfig.json",
    "script:buildWebContainerFileSystemTree": "npm run run:ts-script -- ./scripts/buildWebContainerFileSystemTree.ts",
    "update": "bash -c 'project=\"$([ \"$0\" != \"bash\" ] && echo \"./apps/$0\")\"; npx npm-check $project --update'",
    "terraform": "terraform -chdir='./infra'",
    "watch:site:public": "echo \"Deprecated: $ npx nodemon --ext 'tsx' --watch './site/src/**/public/**/*.tsx' --exec 'bash ./scripts/copy_public_dirs.sh'\"",
    "watch:webcontainer": "npx nodemon --watch './apps/webcontainer-*/**/*.*' --exec 'npm run script:buildWebContainerFileSystemTree'"
  },
  "devDependencies": {
    "@styled/typescript-styled-plugin": "^1.0.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^3.0.1",
    "npm-check": "^6.0.1",
    "prettier": "^3.0.3",
    "prettier-eslint": "^16.1.2",
    "prettier-plugin-astro": "^0.12.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-prettier": "^4.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}