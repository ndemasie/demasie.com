{
  "name": "@ndemasie/mono",
  "version": "0.4.0",
  "description": "Repo to tinker",
  "author": "Nathan DeMasie (https://nathan.demasie.com)",
  "homepage": "https://github.com/ndemasie/demasie.com",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app": "bash -c 'npm --prefix ./packages/$0 run dev'",
    "dev": "npm run docker:dev & watch:package & npm run watch:webcontainer:nathan-edu-i18next",
    "docker:clean": "bash ./scripts/docker_functions.sh stop && bash ./scripts/docker_functions.sh clean",
    "docker:dev": "bash ./scripts/docker_functions.sh compose dev up --build --abort-on-container-exit",
    "docker:prod": "bash ./scripts/docker_functions.sh compose prod up --build --detach",
    "lint:check": "npx eslint src",
    "lint:fix": "npx eslint src --fix",
    "run:ts-script": "npx ts-node --transpile-only --project ./scripts/tsconfig.json",
    "script:buildWebContainerFileSystemTree": "npm run run:ts-script -- ./scripts/buildWebContainerFileSystemTree.ts",
    "update": "npm run update:pkgs --workspaces",
    "update:lock": "npm run update:lock --workspaces",
    "terraform": "terraform -chdir='./infra'",
    "watch:package": "npx nodemon --watch './packages/**/package.json' --exec 'npm i --package-lock-only --workspaces=false",
    "watch:webcontainer:nathan-edu-i18next": "npx nodemon --watch './packages/nathan-edu-i18next/**/*.*' --exec 'npm run script:buildWebContainerFileSystemTree'"
  },
  "devDependencies": {
    "@styled/typescript-styled-plugin": "1.0.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/lodash": "4.17.20",
    "@types/node": "20.8.9",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "nodemon": "3.1.10",
    "npm-check": "6.0.1",
    "prettier": "3.6.2",
    "prettier-eslint": "16.4.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-stylelint": "0.4.2",
    "stylelint": "16.21.1",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-standard-scss": "14.0.0",
    "stylelint-prettier": "5.0.3",
    "ts-node": "10.9.2",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  }
}