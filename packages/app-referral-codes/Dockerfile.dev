# Stage 1: Build
FROM node:22-alpine AS build
WORKDIR /root
ENV HOST app-referral-codes
ENV PORT 10400

COPY ./package.json ./
COPY ./package-lock.json ./
COPY ./astro.config.mjs ./
COPY ./components.json ./
COPY ./tsconfig.json ./
COPY ./tailwind.config.mjs ./

RUN npm install

EXPOSE 10400

ENTRYPOINT ["npm", "run", "dev"]