# Stage 1: Build
FROM node:22-alpine AS build
WORKDIR /root

ENV HOST site-nathan
ENV PORT 10100

COPY ./package.json ./
COPY ./astro.config.mjs ./
COPY ./tsconfig.json ./
COPY ./postcss.config.js ./
COPY ./svelte.config.js ./
COPY ./src/types ./src/types

RUN npm install

EXPOSE 10100

ENTRYPOINT ["npm", "run", "dev"]