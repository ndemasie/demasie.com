---
import PageLayout from 'src/layouts/PageLayout.astro'
import { Theme, Page, Language } from 'src/types'

export function getStaticPaths() {
  return Object.values(Language).map((lang) => ({ params: { lang } }))
}

type Params = Awaited<ReturnType<typeof getStaticPaths>>[number]['params']

const { lang } = Astro.params as unknown as Params
---

<PageLayout page={Page.TUTORIAL} lang={lang} theme={Theme.LIGHT}>
  <iframe
    id="editor"
    title="Codedamn test"
    allow="cross-origin-isolated"
    src={import.meta.env?.PROD
      ? 'https://nathan.demasie.com/edu-design-principles/proxy'
      : 'http://localhost:10000/edu-design-principles/proxy'}
  >
  </iframe>
</PageLayout>

<script lang="ts">
  document?.querySelector('iframe').addEventListener('load', function () {
    this.contentWindow?.document
      ?.querySelector?.('.fixed.z\\-\\[1000\\]')
      ?.remove()
  })
</script>

<style lang="scss" is:global>
  main {
    position: relative;
    height: 100%;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }
</style>

<style lang="scss">
  #editor {
    padding-top: 40px;
    border: none;
    width: 100%;
    height: 100%;
  }
</style>
