---
import 'src/styles/main.scss'
import { Language, Theme, Page } from 'src/types'
import 'modern-normalize/modern-normalize.css'

import HtmlHead from 'src/components/HtmlHead.astro'
import FooterActions from 'src/components/FooterActions.astro'

interface Props {
  page: Page
  lang: Language
  theme: Theme
}

const { page, lang, theme = Theme.LIGHT } = Astro.props
---

<!doctype html>
<html lang={lang} dir="ltr" data-theme={theme}>
  <HtmlHead page={page} lang={lang}>
    <slot name="meta" />
    <slot name="head" />
  </HtmlHead>

  <body>
    <main>
      <slot />
    </main>

    <footer>
      <FooterActions lang={lang} />
    </footer>

    <style lang="scss" is:global>
      body {
        min-height: 100vh;
        padding: 0;
      }

      a {
        text-decoration: none;
      }

      main {
        position: relative;
        height: 100%;
        width: 100%;
        min-height: 100%;
        min-width: 100%;
        overflow: hidden;
      }
    </style>
  </body>
</html>
