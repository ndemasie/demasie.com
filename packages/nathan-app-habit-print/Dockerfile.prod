# Stage 1: Build
FROM node:22-alpine AS build

RUN apk add --no-cache curl

ENV NODE_ENV=production
ENV ENVIRONMENT_MODE=production

WORKDIR /root

COPY package.json ./
COPY package-lock.json ./
RUN npm ci

COPY ./src ./src

EXPOSE 10300

HEALTHCHECK \
  --interval=30s \
  --timeout=10s \
  --start-period=15s \
  --retries=3 \
  CMD curl --head --fail --silent http://localhost:10300/health || exit 1

ENTRYPOINT ["npm", "run", "dev"]