# Stage 1: Build
FROM node:22-alpine AS build

RUN apk add --no-cache curl

ENV NODE_ENV=production
ENV ENVIRONMENT_MODE=production
ENV HOST=localhost
ENV PORT=10300

WORKDIR /root

COPY package.json ./
COPY package-lock.json ./
RUN npm ci

COPY ./src ./src

EXPOSE ${PORT}

HEALTHCHECK \
  --interval=30s \
  --timeout=10s \
  --start-period=15s \
  --retries=3 \
  CMD curl --head --fail --silent http://${HOST}:${PORT}/health || exit 1

ENTRYPOINT ["npm", "run", "dev"]