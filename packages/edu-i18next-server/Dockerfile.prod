# BASE
FROM node:22-alpine AS base

ENV NODE_ENV=production
ENV HOST=edu-i18next-server
ENV PORT=10200

# BUILD
FROM base AS build

WORKDIR /root

COPY package.json ./
COPY package-lock.json ./
RUN npm ci --omit=dev

COPY ./src ./src

EXPOSE ${PORT}

COPY ./scripts/healthcheck.js ./scripts/healthcheck.js
HEALTHCHECK \
  --interval=30s \
  --timeout=10s \
  --start-period=15s \
  --retries=3 \
  CMD node ./scripts/healthcheck.js || exit 1

ENTRYPOINT ["npm", "run", "prod"]