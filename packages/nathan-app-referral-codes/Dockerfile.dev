# Stage 1: Build
FROM node:22-alpine AS build

RUN apk add --no-cache curl

ENV PORT=10400

WORKDIR /root

COPY ./package.json ./
COPY ./package-lock.json ./
COPY ./astro.config.mjs ./
COPY ./components.json ./
COPY ./tsconfig.json ./
COPY ./tailwind.config.mjs ./

RUN npm install

EXPOSE 10400

HEALTHCHECK \
  --interval=30s \
  --timeout=10s \
  --start-period=15s \
  --retries=3 \
  CMD curl --head --fail --silent http://localhost:10400/health || exit 1

ENTRYPOINT ["npm", "run", "dev"]